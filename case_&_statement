case  in
   Pattern 1) Statement 1;;
   Pattern n) Statement n;;
esac

EXAMPLE:-

#!/bin/bash
CARS="bmw"
case "$CARS" in 
	#case 1 
	"mercedes") echo "Headquarters - Affalterbach, Germany" ;; 
	
  #case 2 
	"audi") echo "Headquarters - Ingolstadt, Germany" ;; 
	
	#case 3 
	"bmw") echo "Headquarters - Chennai, Tamil Nadu, India" ;; 
esac 
